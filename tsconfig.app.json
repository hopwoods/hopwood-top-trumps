{
  "compilerOptions": {
    // "composite": true, // Removed
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo", // Can be kept or removed if not using -b
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    // "emitDeclarationOnly": true, // Removed
    // "declaration": true, // Removed
    "noEmit": true, // Ensure no output from tsc for app files
    "jsx": "react-jsx",
    "types": ["vitest/globals"], // Removed "@testing-library/jest-dom"

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.e2e.ts",
    "vitest.setup.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.e2e.ts"
  ]
}
